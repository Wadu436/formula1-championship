    "version": "0.2.0",
    "configurations": [{
            "name": "Debug Django (docker)",
            "type": "python",
            "request": "attach",
            "pathMappings": [{
                "localRoot": "${workspaceFolder}/app",
                "remoteRoot": "/home/app/web"
            }],
            "port": 3000,
            "host": "127.0.0.1",
        },
        {
            "name": "Python: Run Tests (Debug)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["test"],
            "console": "integratedTerminal"
        }
    ]
}